 function checkClue1() {
    const input = document.getElementById('input1').value;
    if (input === 'tsrif') { // Correct answer for "first" reversed
        document.getElementById('result1').innerText = 'Correct! Go to the next clue.';
        document.getElementById('clue2').style.display = 'block';
    } else {
        document.getElementById('result1').innerText = 'Incorrect, try again.';
    }
}

function checkClue2() {
    const input = document.getElementById('input2').value;
    if (input === '12') { // Correct answer for sum of evens [2, 4, 6]
        document.getElementById('result2').innerText = 'Correct! Go to the next clue.';
        document.getElementById('clue3').style.display = 'block';
    } else {
        document.getElementById('result2').innerText = 'Incorrect, try again.';
    }
}

function checkClue3() {
    const input = document.getElementById('input3').value;
    if (input === 'idnesg') { // Correct answer for hidden message "hiddenmessage"
        document.getElementById('result3').innerText = 'Correct! Go to the next clue.';
        document.getElementById('clue4').style.display = 'block';
    } else {
        document.getElementById('result3').innerText = 'Incorrect, try again.';
    }
}

function checkClue4() {
    const input = document.getElementById('input4').value;
    if (input === '5') { // Correct answer for 3 + 2 = 5
        document.getElementById('result4').innerText = 'Correct! Here is your final prize.';
        document.getElementById('final-clue').style.display = 'block';
    } else {
        document.getElementById('result4').innerText = 'Incorrect, try again.';
    }
}
